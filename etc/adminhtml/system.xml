<?xml version="1.0" encoding="UTF-8" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="cspwhitelist" translate="label" sortOrder="10001" showInDefault="1" showInWebsite="1"
                 showInStore="1">
            <class>separator-top</class>
            <label>CSP Whitelist</label>
            <tab>orangecat</tab>
            <resource>Orangecat_CspWhitelist::config</resource>
            <group id="general" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General</label>
                <field id="enabled" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment><![CDATA[Enables/disables CSP Whitelisting]]></comment>
                </field>
                <field id="policies" translate="label" sortOrder="20" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>Policies</label>
                    <frontend_model>Orangecat\CspWhitelist\Block\Adminhtml\Form\Field\Policies</frontend_model>
                    <backend_model>Magento\Config\Model\Config\Backend\Serialized\ArraySerialized</backend_model>
                </field>
            </group>

            <group id="header_splitting" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Header Spliting</label>
                <field id="enabled" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment><![CDATA[Enable/disable Header Spliting]]></comment>
                </field>
                <field id="max_header_size" translate="label" type="text" sortOrder="20" showInDefault="1"
                       showInWebsite="1" showInStore="1" canRestore="1">
                    <label><![CDATA[Maximum Header Size in Bytes]]></label>
                </field>
                <field id="csp_header" translate="label" type="note" sortOrder="30" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>Current CSP Header</label>
                    <frontend_model>Orangecat\CspWhitelist\Block\Adminhtml\Form\Field\CspHeader</frontend_model>
                </field>
            </group>
        </section>
    </system>
</config>
